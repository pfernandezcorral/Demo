<apex:page controller="SeleniumTestQuickRun" tabStyle="Selenium_Test_Run__c" extensions="LicenseHelper" action="{!quickRun}" id="thePage" lightningStylesheets="true">
    <head>
        <apex:stylesheet value="{!URLFOR($Resource.CopadoLightningCSS)}" />
    </head>

    <body>
        <apex:sectionHeader id="theHeader" title="Copado Selenium Testing" subtitle="{!IF(mode=='create', $Label.CREATE_SELENIUM_SETTINGS, suite.Name)}" />

        <!-- check that the feature is enabled, and the user has a license assigned -->
        <apex:pageMessage severity="WARNING" strength="2" summary="{!possibleCSTErrorMsg}" rendered="{!!ISNULL(possibleCSTErrorMsg)}"></apex:pageMessage>

        <c:GAnalytics />
        
        <apex:form id="theForm" rendered="{!and($Setup.Settings__c.Enabled_Multi_Licenses__c, $Setup.Copado_License__c.Enable_CST__c)}" styleClass="copado-lightning-container">
            <apex:pageBlock id="pb" mode="edit">
                <apex:pageBlockButtons id="pbs">
                    <apex:commandButton id="btnContinue" action="{!quickRunConfirmed}" value="Continue" rendered="{!mode=='confirm'}" />
                    <apex:commandButton id="btnSave" action="{!save}" value="{!$Label.Save_And_Run}" rendered="{!mode=='create'}"/>
                    <apex:commandButton action="{!cancel}" value="{!$Label.site.cancel}" immediate="true"/>
                </apex:pageBlockButtons>
                <apex:pageMessages />

                <apex:outputPanel rendered="{!mode=='create'}">
                    <apex:pageMessage summary="{!$Label.CREATE_SELENIUM_SETTINGS_INFO}" severity="INFO" strength="2"/>
                    <apex:pageBlockSection title="Create Quick Test Settings" columns="1">
                        <apex:inputField value="{!settings.Webdriver_URL__c}" required="true"/>
                        <apex:outputPanel ></apex:outputPanel>
                        <apex:inputField value="{!settings.Default_Org_Credential__c}" required="true" />
                    </apex:pageBlockSection>
                </apex:outputPanel>

                <apex:outputPanel rendered="{!mode!='create'}">
                    <apex:pageBlockSection title="Test Run" columns="1">
                        <apex:outputField value="{!run.Name}" />
                        <apex:outputField value="{!run.Last_Status__c}" />
                        <apex:outputField value="{!run.Org_Credential__r.Name}" />
                    </apex:pageBlockSection>

                    <apex:pageBlockSection title="Test Suite" columns="1">
                        <apex:outputField value="{!suite.Name}" />

                        <apex:outputText value="{!count_cases} test cases in this suite" />
                    </apex:pageBlockSection>

                    <apex:pageBlockSection title="Selenium Settings" columns="1">
                        <apex:outputField value="{!settings.Name}" />
                    </apex:pageBlockSection>
                </apex:outputPanel>

            </apex:pageBlock>
        </apex:form>
        
        <script>
            ga('send', 'pageview', {
                'page': '/SeleniumTestQuickRun',
                'title': 'Selenium Test Quick Run'
            });
        </script>
    </body>
</apex:page>